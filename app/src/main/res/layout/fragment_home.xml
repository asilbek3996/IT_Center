                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="Scratch"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
