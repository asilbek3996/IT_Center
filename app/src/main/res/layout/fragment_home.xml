                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:textColor="@color/black"
                                                        android:gravity="center"
                                                        android:textSize="10sp"
                                                        android:text="%"
                                                        android:layout_gravity="center"/>
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                        </FrameLayout>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/nameAndroid2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14sp"
                                        android:maxLines="2"
                                        android:textStyle="bold"
                                        android:text="Muxtorov Javohir"
                                        android:gravity="center"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/android3"
                                    android:layout_width="95.5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        app:cardBackgroundColor="#A8A8A8"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="1dp">
                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:id="@+id/imgAndroid3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"/>
                                        </FrameLayout>
                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:background="@drawable/appcompat_buttons"
                                            android:layout_gravity="bottom">
                                            <androidx.cardview.widget.CardView
                                                android:layout_width="match_parent"
                                                android:layout_height="12dp"
                                                app:cardCornerRadius="20dp"
                                                android:layout_margin="3dp"
                                                app:cardElevation="0dp">
                                                <ProgressBar
                                                    android:id="@+id/progressAndroid3"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:scaleY="6"
                                                    android:layout_gravity="center"
                                                    android:progressBackgroundTint="@color/light_green"
                                                    android:max="100" />
                                                <LinearLayout
                                                    android:layout_width="match_parent"
